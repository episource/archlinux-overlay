# Based on: https://aur.archlinux.org/packages/validatornu/

pkgname=validatornu
pkgver=16.3.3
pkgrel=0
pkgdesc="A command line tool for HTML5 markup validation"
arch=('any')
url="http://validator.github.io"
license=('custom')
depends=('java-runtime-headless>=8' 'bash')
makedepends=('unzip')
source=("validatornu"
        "https://github.com/validator/validator/releases/download/${pkgver}/vnu.jar_${pkgver}.zip")
md5sums=('79db8f5ab174c2aa312201aba4ff85ae'
         'f0272b5ef1089cacb667a852f7bac040')

package() {
  cd "$srcdir/dist"
  install -D "$srcdir/validatornu" "$pkgdir/usr/bin/validatornu"
  install -D -m644 vnu.jar "$pkgdir/usr/share/java/$pkgname/vnu.jar"
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -D -m644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -D -m644 CHANGELOG.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -D -m644 index.html "$pkgdir/usr/share/doc/$pkgname/index.html"
}
